<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/joinbackground"
        tools:context=".CheckMyInfoActivity">

        <!-- 창 종료 -->
        <Button
            android:id="@+id/exitBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:background="@drawable/exitbtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="닫기 버튼" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:src="@drawable/changemyinfologo"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- 이름 포함 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="이름"
                        android:textColor="@color/black"
                        android:textSize="8pt"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/inputName"
                        android:layout_width="280dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="20dp"
                        android:background="#E8E6E6"
                        android:hint=" 이름"
                        android:inputType="text"
                        android:padding="7dp"
                        android:textSize="10pt" />
                </LinearLayout>

                <!-- 아이디 포함 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="아이디"
                        android:textColor="@color/black"
                        android:textSize="8pt"
                        android:textStyle="bold" />

                    <!-- 아이디 받아오기 -->
                    <TextView
                        android:id="@+id/inputID"
                        android:layout_width="280dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/white"
                        android:text=" 아이디"
                        android:inputType="text"
                        android:padding="7dp"
                        android:textSize="10pt" />

                </LinearLayout>

                <!-- 비밀번호 포함 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="비밀번호"
                        android:textColor="@color/black"
                        android:textSize="8pt"
                        android:textStyle="bold" />

                    <!-- 비밀번호 받아오기 -->
                    <TextView
                        android:id="@+id/inputPWD"
                        android:layout_width="280dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/white"
                        android:text=" 비밀번호"
                        android:padding="7dp"
                        android:textSize="10pt" />

                </LinearLayout>

                <!-- 성별 포함 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="10dp"
                        android:text="성별"
                        android:textColor="@color/black"
                        android:textSize="8pt"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_marginLeft="20dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="남" />

                        <RadioButton
                            android:id="@+id/female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="여" />
                    </RadioGroup>

                </LinearLayout>

                <!-- 나이 포함 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="나이"
                        android:textColor="@color/black"
                        android:textSize="8pt"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/selectAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="80dp"
                        android:layout_weight="1" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/changeBtn"
                    android:src="@drawable/changebtn"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:contentDescription="수정하기 버튼"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>